<svg width="200" height="300" viewBox="0 0 200 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect width="200" height="300" fill="#f3f4f6"/>
  <rect x="10" y="10" width="180" height="280" fill="#e5e7eb" stroke="#d1d5db" stroke-width="2"/>

  <!-- Film icon -->
  <g transform="translate(75, 100)">
    <rect x="0" y="0" width="50" height="40" rx="4" fill="#9ca3af"/>
    <rect x="5" y="5" width="40" height="30" rx="2" fill="#6b7280"/>
    <circle cx="10" cy="10" r="2" fill="#9ca3af"/>
    <circle cx="40" cy="10" r="2" fill="#9ca3af"/>
    <circle cx="10" cy="30" r="2" fill="#9ca3af"/>
    <circle cx="40" cy="30" r="2" fill="#9ca3af"/>

    <!-- Play button -->
    <polygon points="20,15 20,25 30,20" fill="#ffffff"/>
  </g>

  <!-- Text -->
  <text x="100" y="170" text-anchor="middle" fill="#6b7280" font-family="Arial, sans-serif" font-size="14" font-weight="500">
    No Image
  </text>
  <text x="100" y="190" text-anchor="middle" fill="#9ca3af" font-family="Arial, sans-serif" font-size="12">
    Available
  </text>

  <!-- Decorative elements -->
  <rect x="30" y="220" width="140" height="2" rx="1" fill="#e5e7eb"/>
  <rect x="50" y="240" width="100" height="2" rx="1" fill="#e5e7eb"/>
  <rect x="70" y="260" width="60" height="2" rx="1" fill="#e5e7eb"/>
</svg>
